public class Solution {
    public int[] plusOne(int[] digits) {
        int n = digits.length;
        while(n>=1){
            if(digits[n-1]!=9){
                digits[n-1] = digits[n-1]+1;
                break;
            }
            else{
                digits[n-1] = 0;
            }
            n=n-1;
        }
        if (digits[0] == 0) {
            int[] res = new int[digits.length+1];
            res[0] = 1;
            return res;
        }
        return digits;
    }
}
